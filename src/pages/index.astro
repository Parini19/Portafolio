---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Social from "../components/Social.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import MailIcon from "../components/icons/Mail.astro";
import Experience from "../components/Experience.astro";
import Notebook from "../components/icons/Notebook.astro";
import Code from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
import ButtonTop from "../components/ButtonTop.astro";
import SobreMi from "../components/SobreMi.astro";
import DownloadCV from "../components/DownloadCV.astro";
import Download from "../components/icons/Download.astro";
---

<Layout>
	<main class="px-4">
		<SectionContainer class="h-screen pt-80">
			<h1
				class="text-white text-3xl md:text-4xl lg:text-5xl fond-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
			>
				Hey! soy <strong class="text-bold text-yellow-400"
					>Guillermo</strong
				>
			</h1>
			<h2 class="text-xl lg:text-2xl text-wrap max-w-[800px]">
				Ingeniero en desarrollo de <strong
					class="text-bold text-yellow-400">Software</strong
				>, enfocado en tecnologías
				<strong class="text-bold text-yellow-400">Backend</strong>,
				abierto a cualquier reto, con facilidad de comunicación y
				adaptabilidad.
			</h2>
			<nav class="flex gap-2 mt-8 flex-wrap">
				<Social
					href="https://www.linkedin.com/in/guillermo-parini-miranda-5111852b6"
				>
					<LinkedInIcon class="size-4 md:size-6" />
					LinkedIn
				</Social>
				<Social href="https://github.com/Parini19">
					<GitHubIcon class="size-4 md:size-6" />
					GitHub
				</Social>
				<Social href="mailto:andreyparini19@gmail.com">
					<MailIcon class="size-4 md:size-6" />
					gparinim@gmail.com
				</Social>
			</nav>
		</SectionContainer>

		<SectionContainer id="experiencia">
			<h2 class="text-3xl semifont-bold mb-6 flex gap-x-2 items-center">
				<Notebook class="size-7" />
				Experiencia Académica
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-3xl semifont-bold mb-6 flex gap-x-2 items-center">
				<Code class="size-7" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>

		<SectionContainer id="sobre-mi">
			<SobreMi />
		</SectionContainer>

		<SectionContainer>
			<DownloadCV>
				<Download class="size-4 md:size-6"/>
				Descargar CV
			</DownloadCV>
		</SectionContainer>
		<ButtonTop />
	</main>
</Layout>
